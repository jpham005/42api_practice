{
  "compilerOptions": {
    "allowJs": false,
    "target": "ES6",
    "outDir": "./dist",
    "moduleResolution": "Node",
    "lib": ["ES2016", "DOM", "DOM.Iterable"],
    "noImplicitAny": true
  },
  "include": ["./src"],
  "exclude": ["node_modules", "dist"],
  "strict": true,
  "strictNullChecks": true,
  "strictFunctionTypes": true,
  "strictBindCallApply": true,
  "strictPropertyInitialization": true,
  "noImplicitThis": true,
  "alwaysStrict": true
}
